                                <path d="M6.34375 19.657C7.44832 19.657 8.34375 18.7616 8.34375 17.657C8.34375 16.5524 7.44832 15.657 6.34375 15.657C5.23918 15.657 4.34375 16.5524 4.34375 17.657C4.34375 18.7616 5.23918 19.657 6.34375 19.657Z" fill="black" fill-opacity="0.1" />
                                <path d="M17.6562 8.34302C18.7608 8.34302 19.6562 7.44759 19.6562 6.34302C19.6562 5.23845 18.7608 4.34302 17.6562 4.34302C16.5517 4.34302 15.6562 5.23845 15.6562 6.34302C15.6562 7.44759 16.5517 8.34302 17.6562 8.34302Z" fill="black" fill-opacity="0.5" />
                                <path d="M4.001 14.001C5.10612 14.001 6.002 13.1051 6.002 12C6.002 10.8949 5.10612 9.99902 4.001 9.99902C2.89588 9.99902 2 10.8949 2 12C2 13.1051 2.89588 14.001 4.001 14.001Z" fill="black" fill-opacity="0.3" />
                                <path d="M20 14C21.1046 14 22 13.1046 22 12C22 10.8954 21.1046 10 20 10C18.8954 10 18 10.8954 18 12C18 13.1046 18.8954 14 20 14Z" fill="black" fill-opacity="0.65" />
                                <path d="M6.34375 8.34399C7.44832 8.34399 8.34375 7.44856 8.34375 6.34399C8.34375 5.23942 7.44832 4.34399 6.34375 4.34399C5.23918 4.34399 4.34375 5.23942 4.34375 6.34399C4.34375 7.44856 5.23918 8.34399 6.34375 8.34399Z" fill="black" fill-opacity="0.3" />
                                <path d="M17.6562 19.658C18.7608 19.658 19.6562 18.7625 19.6562 17.658C19.6562 16.5534 18.7608 15.658 17.6562 15.658C16.5517 15.658 15.6562 16.5534 15.6562 17.658C15.6562 18.7625 16.5517 19.658 17.6562 19.658Z" fill="black" fill-opacity="0.85" />
                            </svg>
                        </span>
                    </button>
                </form>
            </div>
        </div>
    </div>


</div>
