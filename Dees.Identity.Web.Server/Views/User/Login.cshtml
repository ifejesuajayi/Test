@model LoginViewModel;


<div class="pageContainer">

    <div class="row">
        @{
            ViewData["Title"] = "Login";
        }

        <div class="contentContainer">
            <div class="content">
                <div class="logoImage">
                    <img src="/images/logo.png" height="32" />
                </div>

                <div class="topArea">
                    <h1>Log in <span>to your account</span></h1>
                    <p>
                        Don&apos;t have an account?
                        <a href="https://deestravels.com/user/b2c-registration">
                            <span>Sign up here</span>
                        </a>
                    </p>

                    @if (ViewData["Error"] is not null)
                    {
                        <span class="globalErrorMsg">@ViewData["Error"]</span>
                    }
                </div>

                <form method="post" action="/user/login" onsubmit="flagExecutionState">
                    <div class="formFieldContainer">
                        <input asp-for="Email" placeholder="Enter your email" />
                        <span asp-validation-for="Email" class="errorMsg"></span>
                    </div>

                    <div class="formFieldContainer">
                        <input type="password" asp-for="Password" placeholder="Enter your password" />
                        <span asp-validation-for="Password" class="errorMsg"></span>
                    </div>

                    <div class="otherOptions">
                        <div class="rememberPassword">
                            <input type="hidden" asp-for="ReturnUrl" />
                            <input type="checkbox" asp-for="IsPersistent" />
                            <span>
                                <svg width="18" height="13" viewBox="0 0 18 13" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M6.00015 10.1701L2.53015 6.70008C2.34317 6.5131 2.08957 6.40806 1.82515 6.40806C1.56072 6.40806 1.30712 6.5131 1.12015 6.70008C0.933168 6.88705 0.828125 7.14065 0.828125 7.40508C0.828125 7.53601 0.853914 7.66566 0.904019 7.78662C0.954124 7.90758 1.02756 8.01749 1.12015 8.11008L5.30015 12.2901C5.69015 12.6801 6.32015 12.6801 6.71015 12.2901L17.2901 1.71008C17.4771 1.5231 17.5822 1.2695 17.5822 1.00508C17.5822 0.740651 17.4771 0.487055 17.2901 0.300077C17.1032 0.1131 16.8496 0.00805664 16.5851 0.00805664C16.3207 0.00805664 16.0671 0.1131 15.8801 0.300077L6.00015 10.1701Z" fill="white" />
                                </svg>
                            </span>
                            <p>Remember Password</p>
                        </div>
                        <div class="forgotPassword">
                            <a asp-area="" asp-controller="User" asp-action="ForgotPassword">
                                <p>
                                    Forgot Password?
                                </p>
                            </a>
                        </div>
                    </div>

                    <button class="loginBtn">
                        <div id="actionLabel">Log in</div>
                        <span id="spinnerElement" class="hide">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M12 22C13.1046 22 14 21.1046 14 20C14 18.8954 13.1046 18 12 18C10.8954 18 10 18.8954 10 20C10 21.1046 10.8954 22 12 22Z" fill="black" />
